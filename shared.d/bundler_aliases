# -*- mode: shell-script -*-

# Lots of these can also be put under the bundle exec  folder in a project
# using `bundle binstub <gemname>`

alias b="bundle"
alias be="bundle exec"
alias brake="bundle exec rake"
alias bguard="bundle exec guard"
alias bc="bundle console"
alias br="bundle exec rails"
alias brc="bundle exec rails console"
alias brdc="bundle exec rails db"
alias brdms="bundle exec rails db:migrate:status"
alias brdm="bundle exec rails db:migrate"
alias brr="bundle exec rails runner"
alias brs="bundle exec rails s"
alias brspec='bundle exec rspec -f d -c --fail-fast --order=defined'
alias bcuke='bundle exec cucumber'
alias bpry='bundle exec pry'
alias brdrop='bundle exec rails db:drop'
alias brcreate='bundle exec rails db:create'
alias brmig='bundle exec rails db:migrate'
alias brsclo='bundle exec rails db:schema:load'
alias brseed='bundle exec rails db:seed'
alias brdtp='bundle exec rails db:test:prepare'
alias brt='bundle exec rails test --verbose --fail-fast --seed=1000 '
