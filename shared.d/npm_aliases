# -*- mode: shell-script -*-

# Aliases for doing npm stuff
alias npms='npm start'
alias npmr='npm run'
alias npmt='npm test'
alias npmi='npm install'
alias npmis='npm install --save'
alias npmid='npm install --save-dev'
alias npmig='npm install --global'

# Aliases for yarn
alias y=yarn
alias ya='yarn add'
alias yad='yarn add --dev'
alias yga='yarn global add'
alias yag='yarn global add'
alias yt='yarn test'
alias ys='yarn start'
alias ydev='yarn run dev'       # common alternative to 'yarn start' during development
alias yb='yarn run build'       # common script name to build a target
alias ydep='yarn run deploy'    # common script name to deploy a change
